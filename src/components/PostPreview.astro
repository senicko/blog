---
import Date from "./Date.astro";

export interface Props {
  title: string;
  publishedDate: string;
  url: string;
}

const { title, publishedDate, url } = Astro.props;
---

<a href={url} class="flex flex-col gap-1">
  <h2 class="text-zinc-900 font-medium text-lg">{title}</h2>
  <span class="text-sm text-zinc-500">
    Published at -
    <Date date={publishedDate} />
  </span>
</a>
